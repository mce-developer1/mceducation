    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Booking</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-edit-booking">
          <div class="form-group">
            <label class="form-label" for="selEduAuthority">Education Authority (EA)</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selEduAuthority">
                <optgroup label="Counsellors">
                  <option selected>Aaron Tan</option>
                  <option>Arya Suman</option>
                  <option>Ashar Ahmad</option>
                  <option>Chua Chin Hui</option>
                </optgroup>
                <optgroup label="Learning Support">
                  <option>Derrick Lee</option>
                  <option>Nurulhuda bte Sazali</option>
                  <option>Siow Poh Piah Irene</option>
                  <option>Tan Boon Huat</option>
                </optgroup>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selClass">Form Class</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selClass">
                <option>P1-EA</option>
                <option>P1-HA</option>
                <option>P1-MA</option>
                <option selected>P1-PA</option>
                <option>P1-SA</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selStudent">Student</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selStudent">
                <option selected>Amos Chee</option>
                <option>Charles Tan</option>
                <option>Faisal Manaf</option>
                <option>Vivian Lim</option>
                <option>Zachary Teo</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtLocation">Location</label>
            <div class="form-group">
               <input class="form-control form-input" type="text" id="txtLocation" value="Staff Room">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtStartDate">Start Date & Time</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtStartDate">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtEndDate">End Date & Time</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtEndDate">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtRemarks">Remarks</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtRemarks"></textarea>
            </div>
          </div>
          <div class="text-danger">
            *Note: An automated email will be sent to EA and Form Teacher.
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

