<div class="modal modal-long-absence-taking fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Long Absence</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-taking-long-absence">
          <div class="form-group">
            <label class="form-label" for="selGrade">Grade</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selGrade">
                <option selected>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selClass">Remedial Class</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selClass">
                <option selected>P1 Maths Remedial</option>
                <option>P2 Maths Remedial</option>
                <option>P3 Maths Remedial</option>
                <option>P4 Maths Remedial</option>
                <option>P5 Maths Remedial</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selStudent">Student</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selStudent">
                <option selected>Amos Chee</option>
                <option>Charles Tan</option>
                <option>Faisal Manaf</option>
                <option>Vivian Lim</option>
                <option>Zachary Teo</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtPeriod">Start & End Dates</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtPeriod">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selStatus">Absent Status</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selStatus">
                <option selected>Absent with MC</option>
                <option>Absent without Reason</option>
                <option>Absent VR(Official)</option>
                <option>Absent VR(Private)</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtRemarks">Remarks</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtRemarks"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

