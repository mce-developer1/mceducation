<div class="modal modal-category-create fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Category</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-create-category">
          <div class="form-group">
            <label class="form-label" for="txtName">Category Name</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtName">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selCategory">Visitor Type</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selCategory">
                <option>Regular</option>
                <option>Normal</option>
                <option>Ad-hoc</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtDescription">Description</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtDescription"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Notification Options</label>
            <div class="form-group">
              <div class="form-control-group">
                <div class="form-check">
                  <div class="form-check-input custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="form0">
                    <label class="custom-control-label" for="form0">Send alert to form teacher</label>
                  </div>
                </div>
              </div>
              <div class="form-control-group">
                <div class="form-check">
                  <div class="form-check-input custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="email0">
                    <label class="custom-control-label" for="email0">Send alert via email</label>
                  </div>
                </div>
                <input class="form-control form-input d-none" type="text" id="txtEmail0" placeholder="Enter recipients email addresses...">
              </div>
              <div class="form-control-group">
                <div class="form-check">
                  <div class="form-check-input custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="sms0">
                    <label class="custom-control-label" for="sms0">Send alert via SMS</label>
                  </div>
                </div>
                <input class="form-control form-input d-none" type="text" id="txtMobile0" placeholder="Enter recipients mobile numbers...">
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

