<div class="modal modal-visitor-checkin fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Visitor Check In</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-checkin-visitor">
          <div class="form-group">
            <label class="form-label" for="txtName">Visitor Name</label>
            <div class="form-group">
              <input class="form-control form-input input-autocomplete" type="text" id="txtName">
              <div class="form-text text-danger d-none">
                <i class="fas fa-exclamation"></i> The visitor is blacklisted.
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtIdentification">Identification Number</label>
            <div class="form-group">
               <input class="form-control form-input" type="text" id="txtIdentification" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selCategory">Category</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selCategory" disabled>
                <option>Contractors</option>
                <option>Delivery</option>
                <option>Ministry Staff</option>
                <option>Parents</option>
                <option>Others</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtCompany">
              Company Name <small class="text-muted">(Optional)</small>
            </label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtCompany" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtMobile">Mobile Number</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtMobile" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtVehicle">
              Vehicle Number <small class="text-muted">(Optional)</small>
            </label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtVehicle">
            </div>
          </div>
          <div class="form-group form-group-child d-none">
            <label class="form-label" for="txtChild">Child's Name</label>
            <div class="form-group">
              <div class="bubble bubble-student d-none">
                <div class="bubble-text">Aaron Tan</div>
                <button class="btn btn-light btn-remove" type="button">
                  <i class="fas fa-times"></i>
                </button>
              </div>
              <button class="btn btn-outline-secondary btn-select" type="button">
                Select from list
              </button>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtPurpose">Purpose of Visit</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtPurpose"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtTimeIn">Date/Time-in</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtTimeIn">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtRemarks">Remarks</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtRemarks"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Check In</button>
      </div>
    </div>
  </div>
</div>

