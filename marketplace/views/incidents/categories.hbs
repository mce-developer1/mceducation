<div class="modal modal-category-create fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Category</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-create-category">
          <div class="form-group">
            <label class="form-label" for="txtName0">Category Name</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtName0">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="selSeverity0">Severity Level</label>
            <div class="form-group">
              <select class="form-control selectpicker" id="selSeverity0">
                <option selected>Minor</option>
                <option>Major</option>
                <option>Serious</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtDescription0">Description</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtDescription0"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

