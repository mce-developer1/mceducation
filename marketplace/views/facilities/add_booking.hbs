<div class="modal modal-facility-booking-create fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Facility Booking</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-create-facility-booking">
          <div class="form-row">
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label">Advanced Booking</label>
                <div class="form-group">
                  <input class="form-control form-input form-input-sm" type="text" value="1 hour" disabled>
                </div>
              </div>
            </div>
            <div class="col-auto"></div>
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label">Advanced Bookings Limit</label>
                <div class="form-group">
                  <input class="form-control form-input form-input-sm" type="text" value="None" disabled>
                </div>
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label">Minimum Duration</label>
                <div class="form-group">
                  <input class="form-control form-input form-input-sm" type="text" value="30 mins" disabled>
                </div>
              </div>
            </div>
            <div class="col-auto"></div>
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label">Repeat Bookings Limit</label>
                <div class="form-group">
                  <input class="form-control form-input form-input-sm" type="text" value="5 times" disabled>
                </div>
              </div>
            </div>
          </div>
          <hr/>
          <div class="form-row">
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="txtStartDate0">Start Date & Time</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" id="txtStartDate0">
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtEndDate0">End Date & Time</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" id="txtEndDate0">
                </div>
              </div>
              <div class="form-group">
                <label class="form-label form-label-checkbox">&nbsp;</label>
                <div class="form-group">
                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="allday0">
                    <label class="custom-control-label" for="allday0">All Day</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-auto"></div>
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="selRepeat0">Repeat</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selRepeat0">
                    <option>None</option>
                    <option selected>Daily</option>
                    <option>Every Weekday</option>
                    <option>Weekly</option>
                    <option>Every 2 Weeks</option>
                    <option>Every Odd Week</option>
                    <option>Every Even Week</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtEndDate0">Ends</label>
                <div class="form-group">
                  <div class="form-group form-group-inline">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="after0" name="ends" checked>
                      <label class="custom-control-label" for="after0">After</label>
                    </div>
                    <input class="form-control form-input form-input-xs" type="text" id="txtTimes0">
                    <label class="form-label">times</label>
                  </div>
                  <div class="form-group form-group-inline">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="on0" name="ends">
                      <label class="custom-control-label" for="on0">On</label>
                    </div>
                    <input class="form-control form-input form-input-sm" type="text" id="txtDate0" disabled>
                  </div>
                </div>
              </div>
            </div>            
          </div>
          <div class="form-group">
            <label class="form-label" for="txtRemarks0">Remarks</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtRemarks0"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label form-label-checkbox">Options</label>
            <div class="form-group">
              <div class="form-group">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="accessories0" checked>
                  <label class="custom-control-label" for="accessories0">Include Accessories</label>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Power Distribution Unit</li>
                  <li class="list-group-item">Projector</li>
                </ul>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>
