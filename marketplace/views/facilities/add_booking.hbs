<div class="modal modal-facility-booking-create fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Facility Booking</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-create-facility-booking">
          <div class="form-group">
            <div class="form-text text-muted">You must book the facility <ins>1 hour</ins> in advance and minimum booking period is <ins>30 mins.</ins></div>
          </div>
          <div class="form-row">
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="txtStartDate0">Start Date & Time</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" id="txtStartDate0">
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtEndDate0">End Date & Time</label>
                <div class="form-group">
                  <div class="form-group">
                    <input class="form-control form-input" type="text" id="txtEndDate0">
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" class="custom-control-input" id="allday0">
                      <label class="custom-control-label" for="allday0">All Day</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-auto"></div>
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="selRepeat0">Repeat</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selRepeat0" data-container=".modal-facility-booking-create">
                    <option selected>None</option>
                    <option>Daily</option>
                    <option>Every Weekday</option>
                    <option>Weekly</option>
                    <option>Every 2 Weeks</option>
                    <option>Every Odd Week</option>
                    <option>Every Even Week</option>
                  </select>
                </div>
              </div>
              <div class="form-group form-group-ends d-none">
                <label class="form-label">Ends</label>
                <div class="form-group">
                  <div class="form-group form-group-inline">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="after0" name="ends" checked>
                      <label class="custom-control-label" for="after0">After</label>
                    </div>
                    <input class="form-control form-input form-input-xs" type="text" id="txtTimes0">
                    <label class="form-label">times</label>
                  </div>
                  <div class="form-group form-group-inline">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="on0" name="ends">
                      <label class="custom-control-label" for="on0">On</label>
                    </div>
                    <input class="form-control form-input form-input-sm" type="text" id="txtDate0" disabled>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group form-group-status d-none">
            <label class="form-label">&nbsp;</label>
            <div class="form-group">
              <div class="form-text text-danger">The slot is not available.</div>
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="selLevel0">Level</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selLevel0" data-container=".modal-facility-booking-create">
                    <option>General</option>
                    <option selected>Grade 1</option>
                    <option>Grade 2</option>
                    <option>Grade 3</option>
                    <option>Grade 4</option>
                    <option>Grade 5</option>
                    <option>Grade 6</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selGroup0">Form Class</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selGroup0" data-container=".modal-facility-booking-create">
                    <option selected>P1-EA</option>
                    <option>P1-HA</option>
                    <option>P1-MA</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-auto"></div>
            <div class="col-lg">
              <div class="form-group">
                <label class="form-label" for="selSubject0">Subject</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selSubject0" data-container=".modal-facility-booking-create">
                    <option selected>General</option>
                    <option>English</option>
                    <option>Mathematics</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group form-group-equipment">
            <label class="form-label form-label-checkbox">Equipment</label>
            <div class="form-group">
              <div class="form-group">
                <div class="form-group">
                  <div class="list-equipment d-none">
                    <ul class="list-group">
                      <li class="list-group-item">
                        <div class="item-text equipment-name">Power Distribution Unit</div>
                        <select class="form-control selectpicker" data-width="auto" data-container=".modal-facility-booking-create">
                          <option selected>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                        </select>
                        <button class="btn btn-light" type="button" >
                          <i class="fas fa-times"></i>
                        </button>
                      </li>
                      <li class="list-group-item">
                        <div class="item-text equipment-name">Projector</div>
                        <select class="form-control selectpicker" data-width="auto" data-container=".modal-facility-booking-create">
                          <option selected>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                        </select>
                        <button class="btn btn-light" type="button" >
                          <i class="fas fa-times"></i>
                        </button>
                      </li>
                    </ul>
                  </div>
                  <div class="input-group">
                    <input class="form-control form-input input-autocomplete" type="text" placeholder="Enter equipment name...">
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary btn-add" type="button" >Add</button>
                    </div>
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary btn-select" type="button" >Select from list</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtRemarks0">Remarks</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtRemarks0"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

