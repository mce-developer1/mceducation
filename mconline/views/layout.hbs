		<script>
			$(document).ready( function () {
				if ($('.drawer').length === 0) {
					$('.btn-drawer').addClass('d-none');
				} else {
					$('.btn-drawer').on('click', function(e) {
						$('.drawer').addClass('show');
					});

					$(document).on('click', function(e) {
						if (!$(e.target).hasClass('.btn-drawer')
								&& ($(e.target).closest('.btn-drawer').length === 0)
								&& ($(e.target).closest('.drawer').length === 0)) {
							$('.drawer').removeClass('show');
						}
					});
				}
				
				$('.dropdown-menu a.dropdown-toggle').on('click', function(e) {
					var $toggle = $(this);
					var $parent = $toggle.offsetParent('.dropdown-menu');
					
					if (!$toggle.next().hasClass('show')) {
						$toggle.parents('.dropdown-menu').first().find('.show').removeClass('show');
					}
					
					$toggle.next('.dropdown-menu').toggleClass('show');
					$toggle.parent('li').toggleClass('show');

					$toggle.parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function ( e ) {
						$('.dropdown-menu .show').removeClass('show');
					});
					
					if (!$parent.parent().hasClass('navbar-nav')) {
						$toggle.next().css({
							'top': $toggle[0].offsetTop, 
							'left': $parent.outerWidth() - 4
						});
					}
					
					return false;
				});
			});
		</script>
