<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-create-test no-sidebar">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item">
                <span class="item-text text-truncate">Create Test</span>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <button class="btn btn-light btn-edit d-none" type="button" title="Edit">
                  <i class="fas fa-edit"></i>
                </button>
              </li>
              <li class="nav-item">
                <button class="btn btn-light btn-move-to d-none" type="button" title="Move to">
                  <i class="fas fa-folder"></i>
                </button>
              </li>
              <li class="nav-divider divider-preview d-none"></li>
              <li class="nav-item">
                <button class="btn btn-light btn-preview d-none" type="button" title="Preview">
                  <i class="fas fa-eye"></i>
                </button>
              </li>
              <li class="nav-item">
                <button class="btn btn-light btn-close d-none" type="button" title="Close">
                  <i class="fas fa-times"></i>
                </button>
              </li>
            </ul>
          </nav>
        </div>
        <div class="article-content">
          <div class="article-body">
            <form class="form-test-attributes">
              <div class="form-group">
                <label class="form-label" for="txtTitle">Title</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" value="P1-Maths Addition" id="txtTitle">
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selGrade">Grade</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selGrade" data-container=".form-test-attributes">
                    <option>Primary 1</option>
                    <option>Primary 2</option>
                    <option>Primary 3</option>
                    <option>Primary 4</option>
                    <option>Primary 5</option>
                    <option>Primary 6</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selSubjet">Subject</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selSubjet" data-container=".form-test-attributes">
                    <option>Chemistry</option>
                    <option>Mathematics</option>
                    <option>Physics</option>
                    <option>Science</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selLanguage">Language</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selLanguage" data-container=".form-test-attributes">
                    <option value="Bahasa Indonesia">Bahasa Indonesia</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Spanish">Spanish</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtKeywords">Keywords</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" id="txtKeywords">
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtPassingCriteria">Passing Criteria (%)</label>
                <div class="form-group">
                  <input class="form-control form-input form-input-sm" type="text" id="txtPassingCriteria">
                </div>
              </div>
              <div class="form-group form-group-actions">
                <button class="btn btn-light btn-cancel" type="button">Cancel</button>
                <button class="btn btn-primary btn-create" type="button">Create</button>
              </div>
            </form>
            <div class="article article-test-components no-sidebar d-none">
              <div class="article-content">
                <div class="article-body">
                  <nav class="navbar navbar-expand">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <div class="item-text text-truncate" title="P1-Maths Addition">P1-Maths Addition</div>
                        <button class="btn btn-light btn-edit-test" type="button" title="Edit">
                          <i class="fas fa-edit"></i>
                        </button>
                      </li>
                    </ul>
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <div class="item-text text-truncate">5 questions, 5 points</div>
                      </li>
                    </ul>
                  </nav>
                  <div class="list-components">
                    <ul class="list-group">
                      <li class="list-group-item">
                        <div class="section-summary default-section-summary">
                          <div class="section-title">Section A</div>
                          <div class="section-description">
                              <p>Answer all questions.</p>
                          </div>
                          <div class="section-actions">
                            <button class="btn btn-light btn-drag" type="button" title="Move">
                              <i class="fas fa-grip-horizontal"></i>
                            </button>
                          </div>
                        </div>
                      </li>
                      <li class="list-group-item">
                        <div class="question-summary">
                          <div class="question-title">Question <span class="question-number">1</span></div>
                          <div class="question-text">
                              <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</p>
                          </div>
                          <div class="question-answers">
                            <div class="answer-details">
                              <div class="custom-control custom-radio">
                                <input type="radio" id="mcq1" name="mcq" class="custom-control-input" checked>
                                <label class="custom-control-label" for="mcq1">
                                  <p>Option 1</p>
                                </label>
                              </div>
                            </div>
                            <div class="answer-details">
                              <div class="custom-control custom-radio">
                                <input type="radio" id="mcq2" name="mcq" class="custom-control-input">
                                <label class="custom-control-label" for="mcq2">
                                  <p>Option 2</p>
                                </label>
                              </div>
                            </div>
                            <div class="answer-details">
                              <div class="custom-control custom-radio">
                                <input type="radio" id="mcq3" name="mcq" class="custom-control-input">
                                <label class="custom-control-label" for="mcq3">
                                  <p>Option 3</p>
                                </label>
                              </div>
                            </div>
                            <div class="answer-details">
                              <div class="custom-control custom-radio">
                                <input type="radio" id="mcq4" name="mcq" class="custom-control-input">
                                <label class="custom-control-label" for="mcq4">
                                  <p>Option 4</p>
                                </label>
                              </div>
                            </div>
                          </div>
                          <div class="question-score">1 pts</div>
                          <div class="question-actions">
                            <button class="btn btn-light btn-drag" type="button" title="Move">
                              <i class="fas fa-grip-horizontal"></i>
                            </button>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                  <nav class="navbar navbar-expand">
                    <ul class="navbar-nav">
                      <li class="nav-item dropup">
                        <button class="btn btn-primary btn-add-question" type="button" data-toggle="dropdown">
                          Add Question <i class="fas fa-caret-up"></i>
                        </button>
                        <div class="dropdown-menu">
                          <a class="dropdown-item" href="#">
                            Single Response MCQ
                          </a>
                          <a class="dropdown-item" href="#">
                            Multiple Reponse MCQ
                          </a>
                          <a class="dropdown-item" href="#">
                            True/False Qn
                          </a>
                          <a class="dropdown-item" href="#">
                            Short-Ans Qn
                          </a>
                          <a class="dropdown-item" href="#">
                            Open-Ended Qn
                          </a>
                        </div>
                      </li>
                      <li class="nav-item">
                        <button class="btn btn-outline-secondary btn-add-section" type="button">
                          Add Section
                        </button>
                      </li>
                      <li class="nav-item">
                        <button class="btn btn-outline-secondary btn-import-question" type="button">
                          Import Question
                        </button>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

