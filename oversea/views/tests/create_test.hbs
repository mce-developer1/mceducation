              <input class="form-control form-input" type="text" id="txtKeywords">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtSynopsis">Synopsis</label>
            <div class="form-group">
              <textarea class="form-control form-input" id="txtSynopsis"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
