<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-resources">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item nav-item-drawer">
                <button class="btn btn-light" type="button">
                  <img src="/static/images/icon_module_resourcebank.png">
                </button>
                <span class="item-text text-truncate">My Library</span>
              </li>
              <li class="nav-item nav-item-submodule dropdown">
                <button class="btn btn-light" type="button" data-toggle="dropdown">
                  All Subjects <i class="fas fa-caret-down"></i>
                </button>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="#">All Subjects</a>
                  <a class="dropdown-item" href="#">Chemistry</a>
                  <a class="dropdown-item" href="#">Mathematics</a>
                  <a class="dropdown-item" href="#">Science</a>
                </div>
              </li>
            </ul>
            <ul class="navbar-nav nav-main">
              <li class="nav-item dialog">
                <div class="input-group input-group-search">
                  <div class="input-group-prepend">
                    <button class="btn btn-light btn-search" type="button">
                      <i class="fas fa-search"></i>
                    </button>
                    <button class="btn btn-light btn-back" type="button">
                      <i class="fas fa-arrow-left"></i>
                    </button>
                  </div>
                  <input class="form-control form-input input-autocomplete" type="text" placeholder="Search channels">
                  <div class="input-group-append">
                    <button class="btn btn-light btn-clear d-none" type="button">
                      <i class="fas fa-times"></i>
                    </button>
                    <button class="btn btn-light btn-toggle" type="button" data-toggle='dialog'>
                      <i class="fas fa-caret-down"></i>
                    </button>
                  </div>
                </div>
                <div class="dialog-menu dialog-menu-search">
                  <form class="form-advanced-search">
                    <div class="form-group">
                      <label class="form-label" for="selCurriculum">Curriculum</label>
                      <select class="form-control selectpicker" id="selCurriculum">
                        <option>All</option>
                        <option>CAIE</option>
                        <option>SG</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label class="form-label" for="selGrade">Grade</label>
                      <select class="form-control selectpicker" id="selGrade">
                        <option>All</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label class="form-label" for="selSubjet">Subject</label>
                      <select class="form-control selectpicker" id="selSubjet">
                        <option>All</option>
                        <option>Chemistry</option>
                        <option>Mathematics</option>
                        <option>Physics</option>
                        <option>Science</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label class="form-label" for="txtKeyword">Keyword</label>
                      <input class="form-control form-input" type="text" id="txtKeyword">
                    </div>
                    <div class="form-group form-group-actions">
                      <button class="btn btn-light" type="button">Reset</button> 
                      <button class="btn btn-primary" type="button">Search</button>
                    </div>
                  </form>
                </div>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <button class="btn btn-light btn-search" type="button" title="Search">
                  <i class="fas fa-search"></i>
                </button>
              </li>
            </ul>
        </div>
        <div class="article-content">
          <div class="article-sidebar">
            <ul class="nav nav-side">
              <li class="nav-item">
                <a class="nav-link active" href="#">All Subjects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Chemistry</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Mathematics</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Science</a>
              </li>
            </ul>
          </div>
          <div class="article-body">
            <div class="loading-state d-none">
              <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Loading...</span>
              </div>
            </div>
            <nav class="navbar navbar-expand">
              <div class="navbar-text">5 records found</div>
            </nav>
            <div class="card-group">
              <div class="card">
                <img class="card-img-top" src="/static/images/icon_generic.png" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    CAIE Maths<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 25%;"></div>
                    </div>
                    <div class="text-muted">
                      Keep it up!
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/icon_mcmaths.png" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    CAIE English<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 25%;"></div>
                    </div>
                    <div class="text-muted">
                      Keep it up!
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/icon_mathbuddies.png" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    My Pals Are Here! Maths<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 10%;"></div>
                    </div>
                    <div class="text-muted">
                      Still a way to go.
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/icon_mcscience.png" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    My Pals Are Here! Science<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 75%;"></div>
                    </div>
                    <div class="text-muted">
                      Almost there!
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/icon_generic.png" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    Take Off with English<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 45%;"></div>
                    </div>
                    <div class="text-muted">
                      Keep it up!
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>        
      </div>
    </div>
  </div>
</div>

<div class="modal modal-resource-preview fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-preview" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <nav class="navbar">
          <div class="navbar-text text-truncate">Resource title</div>
          <ul class="navbar-nav">
            <li class="nav-item">
              <button class="btn btn-light btn-share" type="button" title="Share">
                <i class="fas fa-share-alt"></i>
              </button>
            </li>
            <li class="nav-divider"></li>
            <li class="nav-item">
              <button class="btn btn-light btn-close" type="button" title="Close" data-dismiss="modal">
                <i class="fas fa-times"></i>
              </button>
            </li>
          </ul>
        </nav>
        <div class="content">
        </div>
      </div>
    </div>
  </div>
</div>

