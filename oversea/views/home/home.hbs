<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-resources {{#if studentUser}}no-sidebar{{/if}}">
        <div class="article-content">
          {{#unless studentUser}}
            <div class="article-sidebar">
              <div class="navbar">
                <button class="btn btn-light" type="button">
                  <i class="fa fa-chevron-left"></i>
                  <i class="fa fa-chevron-right"></i>
                </button>
              </div>
              <form class="form-filters">
                <div class="form-group">
                  <label class="form-label" for="selGrade">Grade</label>
                  <select class="form-control selectpicker" id="selGrade" data-container=".article-sidebar">
                    <option>All</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                  </select>
                </div>
                <div class="form-group">
                  <label class="form-label" for="selSubjet">Subject</label>
                  <select class="form-control selectpicker" id="selSubjet" data-container=".article-sidebar">
                    <option>All</option>
                    <option>Chemistry</option>
                    <option>Mathematics</option>
                    <option>Physics</option>
                    <option>Science</option>
                  </select>
                </div>
                <div class="form-group">
                  <label class="form-label" for="selCurriculum">Curriculum Standards</label>
                  <select class="form-control selectpicker" id="selCurriculum" data-container=".article-sidebar">
                    <option>All</option>
                    <option>CAIE</option>
                    <option>SG</option>
                  </select>
                </div>
              </form>
            </div>
          {{/unless}}
          <div class="article-body">
            <div class="card-group">
              <div class="card">
                <img class="card-img-top" src="/static/images/thumbnail.jpg" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    CIE Maths<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 25%;"></div>
                    </div>
                    <div class="text-muted">
                      25% Complete
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/thumbnail.jpg" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    My Pals Are Here! Maths<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 10%;"></div>
                    </div>
                    <div class="text-muted">
                      10% Complete
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/thumbnail.jpg" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    My Pals Are Here! Science<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 75%;"></div>
                    </div>
                    <div class="text-muted">
                      75% Complete
                    </div>
                  {{/if}}
                </div>
              </div>
              <div class="card">
                <img class="card-img-top" src="/static/images/thumbnail.jpg" alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">
                    Take Off with English<br/>
                    Student Textbook
                  </h6>
                  <p class="card-text">
                    Primary 1 to 6
                  </p>
                  {{#if studentUser}}
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 45%;"></div>
                    </div>
                    <div class="text-muted">
                      45% Complete
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>        
      </div>
    </div>
  </div>
</div>
