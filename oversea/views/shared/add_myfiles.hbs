<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-upload-file no-sidebar">
        <div class="article-content">
          <div class="article-body">
            
          </div>
        </div>            
      </div>
    </div>
  </div>
</div>

<div class="modal modal-resource-preview fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-preview" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <nav class="navbar">
          <div class="navbar-text text-truncate">Resource title</div>
          <ul class="navbar-nav">
            <li class="nav-item">
              <button class="btn btn-light btn-share" type="button" title="Share">
                <i class="fas fa-share-alt"></i>
              </button>
            </li>
            <li class="nav-item">
              <button class="btn btn-light btn-download" type="button" title="Download">
                <i class="fas fa-download"></i>
              </button>
            </li>
            <li class="nav-divider"></li>
            <li class="nav-item">
              <button class="btn btn-light btn-close" type="button" title="Close" data-dismiss="modal">
                <i class="fas fa-times"></i>
              </button>
            </li>
          </ul>
        </nav>
        <div class="content">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal modal-resource-details fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Resource Details</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="attribute-group">
          <div class="attribute">
            <div class="attribute-name">Subject</div>
            <div class="attribute-value">
            </div>
          </div>
          <div class=" attribute">
            <div class="attribute-name">Level</div>
            <div class="attribute-value">
            </div>
          </div>
          <div class="attribute">
            <div class="attribute-name">Last Modified</div>
            <div class="attribute-value">
            </div>
          </div>
          <div class="attribute">
            <div class="attribute-name">File Size</div>
            <div class="attribute-value">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
