<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-file-upload no-sidebar">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item nav-item-drawer">
                <span class="item-text text-truncate">My Files</span>
              </li>
            </ul>
          </nav>
        </div>
        <div class="article-content">
          <div class="article-body">
            <nav class="navbar navbar-expand">
              <div class="navbar-text">&nbsp;</div>
              <ul class="navbar-nav nav-form d-none">
                <li class="nav-item">
                  <form class="form-inline form-add-resource">
                    <label class="form-label">Add to</label>
                    <select class="form-control selectpicker" data-width="160">
                      <option selected>Counting To 10</option>
                      <option>Comparing Numbers</option>
                      <option>Making Number Patterns</option>
                    </select>
                    <button type="button" class="btn btn-primary btn-add">
                      Add
                    </button>
                  </form>
                </li>
              </ul>
            </nav>
            <div class="file-upload">
              <div class="file-upload-control">
                <div class="upload-text">Drag and drop files here</div>
                <div class="text-muted">or</div>
                <button class="btn btn-outline-secondary btn-upload" type="button">
                  Select files to upload
                </button>
              </div>
              <div class="file-group d-none"></div>
            </div>
          </div>
        </div>            
      </div>
    </div>
  </div>
</div>

<div class="modal modal-file-edit-attributes fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit attributes</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-edit-file-attributes">
          <div class="form-group">
            <label class="form-label" for="txtTitle">Title</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtTitle" value="File name">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtDescription">Description</label>
            <div class="form-group">
              <textarea class="form-control form-input" type="text" id="txtDescription"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

<div class="modal modal-file-remove-confirmation fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmation</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to remove the file?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">OK</button>
      </div>
    </div>
  </div>
</div>

<div class="toast-stack d-none">
  <div class="toast" role="alert fade" data-delay="5000">
    <div class="toast-header">
      <button class="close" type="button" title="Close" data-dismiss="toast">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>    
    <div class="toast-body">
      <i class="img img-toast-success"></i>
      Files have been added to the "Counting To 10" folder.
    </div>
  </div>
</div>

<script id="preview" type="text/x-template">
  <div class="file-preview">
    <div class="file-actions">
      <button class="btn btn-light btn-edit" type="button" title="Edit">
        <i class="fas fa-edit"></i>
      </button>
      <button class="btn btn-light btn-delete" type="button" title="Delete">
        <i class="fas fa-trash"></i>
      </button>
    </div>
    <div class="file-details">
      <div class="file-thumbnail">
      </div>
      <div class="file-filename">
        <div class="file-name"></div>
        <div class="file-size text-muted"></div>
      </div>
    </div>
    <div class="file-progress">
      <div class="progress-bar"></div>
    </div>  
    <div class="file-message">
      <div class="text-success"></div>
      <div class="text-danger"></div>
    </div>
    <input class="file-uuid" type="hidden" />
  </div>
</script>
