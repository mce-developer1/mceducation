<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-weblinks no-sidebar">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item nav-item-drawer">
                <span class="item-text text-truncate">Weblinks</span>
              </li>
            </ul>
          </nav>
        </div>
        <div class="article-content">
          <div class="article-body">
            <nav class="navbar navbar-expand">
              <div class="navbar-text">&nbsp;</div>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <form class="form-inline form-add-resource">
                    <label class="form-label">Add to</label>
                    <select class="form-control selectpicker" data-width="160">
                      <option selected>Counting To 10</option>
                      <option>Comparing Numbers</option>
                      <option>Making Number Patterns</option>
                    </select>
                    <button type="button" class="btn btn-primary btn-add">
                      Add
                    </button>
                  </form>
                </li>
              </ul>
            </nav>
            <div class="weblink-group">
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="weblink-details">
                    <a class="weblink-url" href="#">https://en.wikipedia.org/wiki/Main_Page</a>
                    <div class="text-muted">Wikipedia</div>
                  </div>
                  <button class="btn btn-light btn-edit" type="button" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-light btn-delete" type="button" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </li>
                <li class="list-group-item">
                  <div class="weblink-details">
                    <a class="weblink-url" href="#">https://www.britannica.com/</a>
                    <div class="text-muted">Britannica</div>
                  </div>
                  <button class="btn btn-light btn-edit" type="button" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-light btn-delete" type="button" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </li>
              </ul>
            </div>
            <form class="form-inline form-add-weblink">
              <div class="form-group">
                <label class="form-label" for="txtURL">URL</label>
                <input class="form-control form-input form-input-md" type="text" id="txtURL">
              </div>
              <div class="form-group">
                <label class="form-label" for="txtTitle">Title</label>
                <input class="form-control form-input" type="text" id="txtTitle">
              </div>
              <div class="form-group">
                <button class="btn btn-outline-secondary" type="button">
                  Add Link
                </button>
              </div>
            </form>
          </div>
        </div>            
      </div>
    </div>
  </div>
</div>

<div class="toast-stack d-none">
  <div class="toast" role="alert fade" data-delay="5000">
    <div class="toast-header">
      <button class="close" type="button" title="Close" data-dismiss="toast">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>    
    <div class="toast-body">
      <i class="img img-toast-success"></i>
      Weblinks have been added to the "Counting To 10" folder.
    </div>
  </div>
</div>
