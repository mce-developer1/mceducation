<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-weblink no-sidebar">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item nav-item-drawer">
                <span class="item-text text-truncate">Weblinks</span>
              </li>
            </ul>
          </nav>
        </div>
        <div class="article-content">
          <div class="article-body">
            <nav class="navbar navbar-expand">
              <div class="navbar-text">&nbsp;</div>
              <ul class="navbar-nav nav-form d-none">
                <li class="nav-item">
                  <form class="form-inline form-add-resource">
                    <label class="form-label text-truncate">Add to</label>
                    <select class="form-control selectpicker" data-width="160">
                      <option selected>Counting To 10</option>
                      <option>Comparing Numbers</option>
                      <option>Making Number Patterns</option>
                    </select>
                    <button type="button" class="btn btn-primary btn-add">
                      Add
                    </button>
                  </form>
                </li>
              </ul>
            </nav>
            <div class="list-weblink d-none">
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="weblink-details">
                    <a class="weblink-url" href="#">https://en.wikipedia.org/wiki/Main_Page</a>
                    <div class="weblink-title">
                      Wikipedia
                    </div>
                  </div>
                  <button class="btn btn-light btn-edit" type="button" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-light btn-delete" type="button" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </li>
                <li class="list-group-item">
                  <div class="weblink-details">
                    <a class="weblink-url" href="#">https://www.britannica.com/</a>
                    <div class="weblink-title">
                      Britannica
                    </div>
                  </div>
                  <button class="btn btn-light btn-edit" type="button" title="Edit">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-light btn-delete" type="button" title="Delete">
                    <i class="fas fa-trash"></i>
                  </button>
                </li>
              </ul>
            </div>
            <nav class="navbar navbar-expand">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <button class="btn btn-outline-secondary btn-add-weblink" type="button">
                    Add Weblink
                  </button>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal modal-weblink-add fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Weblink</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-add-weblink">
          <div class="form-group">
            <label class="form-label" for="txtURL">URL</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtURL">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtTitle">Title</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtTitle">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtDescription">Description</label>
            <div class="form-group">
              <textarea class="form-control form-textarea" type="text" id="txtDescription"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" type="button" data-dismiss="modal">Cancel</button>
        <button class="btn btn-light" type="button">Add & New</button>
        <button class="btn btn-primary" type="button">Add</button>
      </div>
    </div>
  </div>
</div>

<div class="modal modal-weblink-edit fade" tabindex="-1" role="dialog" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Weblink</h5>
        <button type="button" class="close" title="Close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-edit-weblink">
          <div class="form-group">
            <label class="form-label" for="txtURL">URL</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtURL" value="https://en.wikipedia.org/wiki/Main_Page">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtTitle">Title</label>
            <div class="form-group">
              <input class="form-control form-input" type="text" id="txtTitle" value="Wikipedia">
            </div>
          </div>
          <div class="form-group">
            <label class="form-label" for="txtDescription">Description</label>
            <div class="form-group">
              <textarea class="form-control form-textarea" type="text" id="txtDescription">Wikipedia is a free online encyclopedia, created and edited by volunteers around the world and hosted by the Wikimedia Foundation.</textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" type="button" data-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="button">Save</button>
      </div>
    </div>
  </div>
</div>

<div class="toast-stack d-none">
  <div class="toast" role="alert fade" data-delay="5000">
    <div class="toast-header">
      <button class="close" type="button" title="Close" data-dismiss="toast">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>    
    <div class="toast-body">
      <i class="img img-toast-success"></i>
      Weblinks have been added to the "Counting To 10" folder.
    </div>
  </div>
</div>
