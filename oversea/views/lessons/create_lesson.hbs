<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-create-lesson no-sidebar">
        <div class="article-header">
          <nav class="navbar navbar-expand">
            <ul class="navbar-nav">
              <li class="nav-item">
                <button class="btn btn-light" type="button">
                  <i class="fas fa-arrow-left"></i>
                </button>
                <span class="item-text text-truncate">Create Lesson</span>
              </li>
            </ul>
          </nav>
        </div>
        <div class="article-content">
          <div class="article-body">
            <form class="form-lesson-attributes">
              <div class="form-group">
                <label class="form-label" for="txtTitle">Title</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" value="P1-Maths Addition" id="txtTitle">
                  <div class="form-text text-success">
                    <i class="fas fa-check"></i> Title is available.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selGrade">Grade</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selGrade" data-container=".article-body">
                    <option>Primary 1</option>
                    <option>Primary 2</option>
                    <option>Primary 3</option>
                    <option>Primary 4</option>
                    <option>Primary 5</option>
                    <option>Primary 6</option>
                  </select>
                  <div class="form-text text-danger">
                    <i class="fas fa-exclamation"></i> Select a grade.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selSubjet">Subject</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selSubjet" data-container=".article-body">
                    <option>Chemistry</option>
                    <option>Mathematics</option>
                    <option>Physics</option>
                    <option>Science</option>
                  </select>
                  <div class="form-text text-danger">
                    <i class="fas fa-exclamation"></i> Select a subject.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="selLanguage">Subject</label>
                <div class="form-group">
                  <select class="form-control selectpicker" id="selLanguage" data-container=".article-body">
                    <option value="Bahasa Indonesia">Bahasa Indonesia</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Spanish">Spanish</option>
                  </select>
                  <div class="form-text text-danger">
                    <i class="fas fa-exclamation"></i> Select a language.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtKeywords">Keywords</label>
                <div class="form-group">
                  <input class="form-control form-input" type="text" id="txtKeywords">
                  <div class="form-text text-danger">
                    <i class="fas fa-exclamation"></i> Keywords cannot be empty.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtSynopsis">Synopsis</label>
                <div class="form-group">
                  <textarea class="form-control form-input" id="txtSynopsis"></textarea>
                  <div class="form-text text-danger">
                    <i class="fas fa-exclamation"></i> Synopsis cannot be empty.
                  </div>
                </div>
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-create" type="button">Create</button>
                <button class="btn btn-light btn-cancel" type="button">Cancel</button>
              </div>
            </form>
            <div class="article article-lesson-components d-none">
              <div class="article-content">
                <div class="article-sidbar">
                  <div class="tree tree-resources">
                    <div class="resource">
                      <a href="#" title="Numbers To 10" class="collapsed">
                        <i class="fas fa-folder-open"></i>
                        <span class="text-truncate">Numbers To 10</span>
                      </a>
                      <div class="resources show">
                        <div class="resource active">
                          <a href="#" title="Counting To 10" class="collapsed">
                            <i class="fas fa-folder"></i>
                            <span class="text-truncate">Counting To 10</span>
                          </a>
                          <div class="resources hide">
                          </div>
                        </div>
                        <div class="resource">
                          <a href="#" title="Comparing Numbers" class="collapsed">
                            <i class="fas fa-folder"></i>
                            <span class="text-truncate">Comparing Numbers</span>
                          </a>
                          <div class="resources hide">                              
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="resource">
                      <a href="#" title="Number Bonds" class="collapsed">
                        <i class="fas fa-folder"></i>
                        <span class="text-truncate">Number Bonds</span>
                      </a>
                      <div class="resources hide">                      
                      </div>
                    </div>
                    <div class="resource">
                      <a href="#" title="Addition Within 10" class="collapsed">
                        <i class="fas fa-folder"></i>
                        <span class="text-truncate">Addition Within 10</span>
                      </a>
                      <div class="resources hide">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="article-body">
                  <nav class="navbar">
                    
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
