<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-particulars">
        <h1>My Profile</h1>
      </div>
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article articlue-profile">
        <div class="content">
          <div class="sidebar">
            <ul class="nav nav-side">              
              <li class="nav-item">                
                {{#if teacherUser}}
                  <a class="nav-link" href="/teacher/profile/update_personal_particulars">Update Personal Particulars</a>
                {{/if}}
                {{#if studentUser}}
                  <a class="nav-link" href="/student/profile/update_personal_particulars">Update Personal Particulars</a>
                {{/if}}
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">Change Password</a>
              </li>
              {{#if teacherUser}}
              <li class="nav-item">
                <a class="nav-link" href="/teacher/profile/reset_student_password">Reset Student Password</a>
              </li>
              {{/if}}
            </ul>
          </div>
          <div class="body">
            <form class="form-change-password">
              <div class="form-group">
                <label class="form-label" for="txtCurrentPassword">Current Password</label>
                <input class="form-control form-input" type="text" id="txtCurrentPassword">
              </div>
              <div class="form-group">
                <label class="form-label" for="txtNewPassword">New Password</label>
                <input class="form-control form-input" type="text" id="txtNewPassword">
                <small class="form-text text-muted">
                  Minimum 8 alphanumeric characters, containing at least 1 letter and 1 numeral and it must be different from the Login ID. Acceptable characters include a-z, 0-9 and symbols _ - . @
                </small>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtConfirmPassword">Confirm Password</label>
                <input class="form-control form-input" type="text" id="txtConfirmPassword">
              </div>
              <div class="form-group">
                <button class="btn btn-primary" type="button">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
