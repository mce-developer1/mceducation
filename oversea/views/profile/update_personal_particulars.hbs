<div class="app-content page-{{module}}">
  <div class="row no-gutters">
    <div class="col-sm">
      <div class="article article-update-personal-particulars">
        <div class="article-header">
          <h5>About Me</h5>
          <button class="btn btn-light" data-toggle="sidebar" data-target=".article-update-personal-particulars">
            <i class="fas fa-caret-down"></i>
          </button>
        </div>
        <div class="article-content">
          <div class="article-sidebar">
            <ul class="nav nav-side">              
              <li class="nav-item">
                <a class="nav-link active" href="#">
                  Update Personal Particulars
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/{{userRole}}/profile/update_personal_settings">
                  Update Personal Settings
                </a>
              </li>
            </ul>
          </div>
          <div class="article-body">
            <form class="form-personal-particulars">
              <div class="form-header">
                <h6>Update Personal Particulars</h6>
              </div>
              <div class="form-group">
                <label class="form-label" for="selGender">Gender</label>
                <select class="form-control selectpicker" id="selGender" data-container=".article-body">
                  <option>Female</option>
                  <option>Male</option>
                </select>
              </div>
              <div class="form-group has-error">
                <label class="form-label" for="txtEmail">Email Address</label>
                <input class="form-control form-input" type="text" id="txtEmail">
                <div class="form-text text-danger">
                  Email address is not valid.
                </div>
              </div>
              <div class="form-group">
                <label class="form-label" for="txtMobile">Mobile Phone</label>
                <input class="form-control form-input" type="text" id="txtMobile">
              </div>
              <div class="form-group">
                <button class="btn btn-primary" type="button">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
